@import "./src/css/mixins"
@import "./src/js/vendor/rainbow/themes/github.css"
@import url('http://fonts.googleapis.com/css?family=Open+Sans:400,300,700')

*
  box-sizing border-box
  margin 0
  padding 0
  list-style none

html, body
  width 100%
  height 100%
  margin 0
  font 16px 'Open Sans', sans-serif
  font-weight 300
  color #333

breakPoint1 = 1060px

.column
  padding 5px 0
  float left
  width 33%
.column1-1
  width 100%
  padding 5px 0
.column1-2
  width 50%
  @media all and (max-width: 1060px)
    padding 10px 0
    width 100%
.column2-5
  width 40%
.column3-5
  width 60%
.column2-3
  width 66.6%
  @media all and (max-width: 1060px)
    padding 10px 0
    width 100%

.text-bold
  font-weight 400

.text-box
  padding-top 50px

.section
  padding 20px 0
  line-height 1.5em
  border-bottom 1px solid rgba(255, 255, 255, 0.5)
  overflow hidden

p
  margin-bottom 15px

pre
  // margin 0 10px
  // margin-bottom 20px
  border-radius 3px
  border 1px solid rgba(0, 0, 0, 0.35)
  background rgba(255, 255, 255, 0.8)

.wrap
  width 1060px
  margin auto
  @media all and (max-width: 1060px)
    width 100%

.fork-me
  position fixed
  top 0
  right 0
  z-index 3
  border 0

.code-header
  margin-bottom 5px
  .number
    font-weight bold
    vertical-align bottom

.domo
  width 100%
  height 100%
  background url(../images/domo.jpg)
  background-size cover
  position fixed
  top 0
  left 0

.main-container
  width 100%
  overflow hidden
  background #f0f0f0
  background rgba(255, 255, 255, 0.8)
  border-top 1px solid rgba(255, 255, 255, 0.9)
  position absolute
  top 75%
  z-index 2
  padding 30px

.title
  font 200 60px "Helvetica Neue", Helvetica, Arial, sans-serif
.title-main, .title-section
  color #222
  font-size 50px
  text-shadow 1px 1px 0 rgba(255, 255, 255, 0.3)
  font-weight 100
.title-section
  font-size 35px
.title-section-only
  margin-bottom 20px
.title-subtitle, .title-method
  color #000
  font-weight 100
  font-size 14px
  letter-spacing 1px
  padding-left 5px
  margin-bottom 20px
  text-shadow 1px 1px 0 rgba(255, 255, 255, 0.2)
.title-method
  font-weight 400
  color #555
  padding 0

.list
  padding-left 20px
  font-size 13px

.list-item
  padding-left 100px
  position relative

.list-item-attribute
  font-size 14px
  font-weight 400
  left 0
  position absolute
  width 80px
  display inline-block
